container_commands:
  10_setup_enviroment:
    command: |
      sudo python3 -m venv /opt/certbot/
      sudo /opt/certbot/bin/pip install --upgrade pip  
  20_install_certbot:
    command: "sudo /opt/certbot/bin/pip install certbot certbot-nginx"
  30_prepare_command:
    command: "sudo ln -s /opt/certbot/bin/certbot /usr/bin/certbot"